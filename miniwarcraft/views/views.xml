  <!-- kanban dels models mes importants-->
  <!--  "search" tots els models que tinguen una vista-->
  
 <record model="ir.ui.view" id="miniwarcraft_search">
      <field name="name">miniwarcraft list</field>
      <field name="model">miniwarcraft.player</field>
      <field name="arch" type="xml">
        <search >
          <field name = "name"  />
          <field name = "avatar_mini" widget="image"/>
          <field name = "bandoimg_mini" widget="image" />
          <field name = "bando" />
          <field name = "password" password="True" />
          <field name="bando" string="bandos" filter_domain="['|',('bando','=','Alliance'),('bando','=','Horde'')]"/>
        </search>
      </field>
    </record> 


