  <record model="ir.ui.view" id="player.tree">
      <field name="name">building </field>
      <field name="model">building.player</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>

           <templates>
                    <t t-name="kanban-box">
                            <div class="oe_product_vignette">
                                <a type="open">
                                    <img class="oe_kanban_image"
                                        t-att-alt="record.name.value"
                                        t-att-style="kanban_image('cooperativa.socio', 'foto', record.id.value)" />
                                </a>
                                <div class="oe_product_desc">
                                    <h4>
                                        <a type="edit">
                                            <field name="name"></field>
                                        </a>
                                    </h4>
                                    <ul>

                                       <li>Arrobas: <field name="arrobas"></field></li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>







        </tree>
      </field>
    </record>

