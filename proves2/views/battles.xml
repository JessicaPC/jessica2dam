  <odoo>
    <data>
  <!-- explicit list view definition -->

   <record model="ir.ui.view" id="miniwarcraft.battles">
      <field name="name">miniwarcraft list</field>
      <field name="model">miniwarcraft.battle</field>
      <field name="arch" type="xml">
        <tree  >
          <field name = "name"  />
          <field name = "data_start"  />
          <field name = "data_end"  />
          <field name = "player1"  />
          <field name = "player2"  />
         
        </tree>
      </field>
    </record> 

<!-- CALENDAR-->
     <record model="ir.ui.view" id="miniwarcraft.battlesCalendar">
      <field name="name">miniwarcraft list</field>
      <field name="model">miniwarcraft.battle</field>
      <field name="arch" type="xml">
        <calendar string="Battle Calendar" 
            date_start="date_start" date_stop="date_end"
                color="player1">
          <field name = "name"  />
          <field name = "data_start"  />
          <field name = "data_end"  />
          <field name = "player1"  />
          <field name = "player2"  />
         
        </calendar>
      </field>
    </record> 

 
  </data>
</odoo>