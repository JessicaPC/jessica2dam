<!-- Te que tindre TREE(tree dins dun form) y FORMS-->
   <record model="ir.ui.view" id="battlewarcraft.list">
      <field name="name">battlewarcraft list</field>
      <field name="model">battlewarcraft.player</field>
      <field name="arch" type="xml">
        <tree>
          <field name = "name"/>
          <field name = "avatar_mini" widget="image"/>
          <field name = "bandoimg_mini" widget="image" />
        </tree>
      </field>
    </record> 

